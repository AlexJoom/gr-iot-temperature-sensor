extends ../layout

block content
  .col-sm-8.col-sm-offset-2
    form(method='POST')
      legend Ξέχασα τον κωδικό μου
      input(type='hidden', name='_csrf', value=_csrf)
      .form-group
        p  Συμπληρώστε το emails σας παρακάτω για να σας στείλουμε οδηγίες για να θέσετε νέο κωδικό
        label.control-label(for='email') Email
        input.form-control(type='email', name='email', id='email', placeholder='Email', autofocus, required)
      .form-group
        button.btn.btn-primary(type='submit')
          i.fa.fa-key
          | Αλλαγή κωδικού
