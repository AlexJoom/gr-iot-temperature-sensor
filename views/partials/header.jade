.navbar.navbar-default.navbar-fixed-top
  .container
    .navbar-header
      button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/')
        img(src="/images/logo.png")
    .collapse.navbar-collapse
      ul.nav.navbar-nav
        if user
          li(class=(menuItem == 'dashboard') ? 'active' : undefined)
            a(href='/dashboard') ΠΙΝΑΚΑΣ ΕΛΕΓΧΟΥ
        if !user
          li(class=(menuItem == 'home') ? 'active' : undefined)
            a(href='/') ΑΡΧΙΚΗ
        li(class=(menuItem == 'contact') ? 'active' : undefined)
          a(href='/contact') ΕΠΙΚΟΙΝΩΝΙΑ
          li(class=(menuItem == 'about') ? 'active' : undefined)
            a(href='/about') ΣΧΕΤΙΚΑ
      ul.nav.navbar-nav.navbar-right
        if !user
          li(class=(menuItem == 'login') ? 'active' : undefined)
            a(href='/login') ΕΙΣΟΔΟΣ
          li(class=(menuItem == 'signup') ? 'active' : undefined)
            a(href='/signup') ΔΗΜΙΟΥΡΓΙΑ ΛΟΓΑΡΙΑΣΜΟΥ
        else
          li.dropdown(class=(title == 'Account Management') ? 'active' : undefined)
            a.dropdown-toggle(href='#', data-toggle='dropdown')
              if user.profile.picture
                img(src='#{user.profile.picture}')
              else
                img(src='#{user.gravatar(60)}')
              | #{user.profile.name || user.email || user.id}&nbsp;
              i.caret
            ul.dropdown-menu
              li
                a(href='/account') Ο ΛΟΓΑΡΙΑΣΜΟΣ ΜΟΥ
              li.divider
              li
                a(href='/logout') ΕΞΟΔΟΣ
