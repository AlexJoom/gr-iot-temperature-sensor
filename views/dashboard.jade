extends layout

block css
    link(rel='stylesheet', href='/css/dashboard/index.css')

block js
    script(src='/js/dashboard/index.js')

block content

    #devices
        h1 Monitoring temperature from #{devices.length} devices
        .row
            .col-lg-12
                each device in devices
                    a.device(href="javascript:void(0)" data-id="#{device}") device: #{device.replace(/^0+/,"")}

    hr
    canvas#temperaturesChart
    hr
    #results
        .state.loading.text-dcenter
            img(src='images/loading.gif')
        .state.results
            p#results-info
                span
                a#export.btn.btn-default.pull-right(href="/dashboard/measurements/export/") Export results
            table.table.table-striped
                thead
                    tr
                        th #
                        th Temperature
                        th Date and time
                tbody
                    each temp,index in measurements
                        tr
                            td= index
                            td= temp.data
                            td= temp.createdAt


        .state.no-results
            p No measurements found for device




